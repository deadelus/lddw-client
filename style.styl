/**
 
    Drag @ Preview
 
 */
#new-post
    .title
        font-size 3rem
        line-height 3rem
        text-align center
        margin-bottom 10px
        height auto        

#dragzone
    height 40vh
    background rgba(204, 204, 204, 0.15)
    position relative
    display flex
    flex-direction column
    border 1px dashed #EAEAEA
    cursor pointer
    label
        margin auto
        cursor pointer
        span
            display block
            margin auto
            text-align center
        span.btn-drag
            button(1.2rem, 50px)
            padding 0 15px
            margin-top 10px
    .ico.drag
        height 50px
        width 50px
    &:hover
        border-color #EAEAEA

#fileInput
    opacity 0
    width 100%
    position absolute
    height 100%
    cursor pointer

#preview
    position relative
    min-height 100px
    max-height: 30vh
    border 2px solid #EAEAEA
    cursor pointer
    overflow: scroll
    .close-btn
        display none
        svg
            fill #cccccc
            width 100%
            height 100%
    &:hover
        .close-btn
            display block
            display block
            position absolute
            width 30px
            height 30px
            top 10px
            right 10px
    img
        width 100%
        height auto



/**
