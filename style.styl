                    @media (max-width 768px)
                        span.ico
                            display block

#profile
    .btn-save
        text-align center
        color #FFF
        background #000000
    .profile
        .btn-save
            padding 5px
            margin 10px 15px
            width 120px
            position absolute
    .settings
        .btn-save
            button(1.8rem, 50px)

.tuile
    display flex
    flex-direction row
    flex-wrap wrap
    .post
        max-width 250px
        max-height 250px
        width 100%
        padding 10px
        box-sizing: border-box
        border solid 1px transparent
        &:hover
            border solid 1px #EAEAEA
        .content
