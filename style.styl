/**

    Drop Down

*/

div.dropdown
    position absolute
    right 15px
    top 15px
    z-index 200
    .btn
        position absolute
        right 0
        display block
        height 15px
        width 15px
        cursor pointer
        opacity 0.8
        svg
            fill #CCC
        &:hover
            opacity 1
    .dropdown-menu
        position absolute
        right 0
        top 20px
        background white
        margin 0
        list-style none
        padding 0
        width 100px
        border 1px solid #CCC
        box-sizing border-box
        transform scale(0)
        transform-origin right top
        transition transform 0.3s
        @media (max-width 768px)
            width 150px
        &.active
            transform scale(1)
        &:after
            content ''
            position absolute
            top -10px
            right 2px
            display block
            width 0
            height 0
            border-bottom 5px solid #CCC
            border-top 5px solid transparent 
            border-left 5px solid transparent 
            border-right 5px solid transparent
            box-sizing border-box
        li
            padding 5px
            font-size 1rem
            cursor pointer
            @media (max-width 768px)
                font-size 1.5rem

