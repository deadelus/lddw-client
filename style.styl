@import './node_modules/kouto-swiss'
@import './node_modules/jeet/styl'

/***************

    La dechetterie du web
    @author Geoffrey Trambolho

***************/

normalize()

@font-face
    font-family Noto
    font-style normal
    font-weight normal
    src url(../fonts/Noto_Sans/NotoSans-Regular.ttf)

@font-face
    font-family Noto
    font-style normal
    font-weight bold
    src url(../fonts/Noto_Sans/NotoSans-Bold.ttf)

@font-face
    font-family Noto
    font-style italic
    font-weight normal
    src url(../fonts/Noto_Sans/NotoSans-Italic.ttf)

@font-face
    font-family Noto
    font-style italic
    font-weight bold
    src url(../fonts/Noto_Sans/NotoSans-BoldItalic.ttf)

$bg = #ffffff
$font = #000000
$font2 = #A1A1A1

textarea,
input
    outline: none 
    border: none
    border: #EAEAEA 2px solid
    resize: none
    padding: 15px
    line-height: 1.4rem

hide()
    position: fixed
    top: 0
    right: 0
    opacity: 0
    z-index: -99999

.hide
    hide()

hr
    margin: 10px 0
    border-color: #CCCCCC

body
    padding-bottom: 100px
    font-family: Noto

span.ico
    display: inline-block
    background-repeat: no-repeat;
    background-position: center;
    width: 15px
    height: 15px
    // fill: #000
    cursor: pointer
    &.search-submit
        background-image: url('./../img/picto/search.svg') 
    &.fb
        background-image: url('./../img/picto/fb.svg') 
    &.tw
        background-image: url('./../img/picto/tw.svg') 
    &.share
        background-image: url('./../img/picto/share.svg') 
    &.comment
        background-image: url('./../img/picto/comment.svg') 
    &.bookmark
        background-image: url('./../img/picto/bookmark.svg') 
    &.shop
        background-image: url('./../img/picto/shop.svg') 
    &.trophy
        background-image: url('./../img/picto/trophy.svg') 
    &.gear
        background-image: url('./../img/picto/gear.svg') 
    &.vote
        background-image: url('./../img/picto/arrow_right_circle.svg') 
    &.vote_up
        background-image: url('./../img/picto/arrow_up.svg') 
        fill: red
        &:hover
            fill: white
            // background-color: red
    &.vote_down
        background-image: url('./../img/picto/arrow_down.svg') 
        fill: blue
        &:hover
            fill: white
            // background-color: blue

.avatar
    width: 50px
    height: 50px
    overflow: hidden
    border-radius: 50%
    img
        width: 100%
        height: auto

/***************

    Bartop

***************/

.container-fluid
    &.bartop
        max-width: 1440px
        padding-top: 50px 
        padding-bottom: 50px 
        font-size: 0
        .brand
            float: left
            height: 50px
            overflow: visible
            .logo
                width: 50px
                height: auto
                fill: #2c3e50
        .search
            margin: 15px 0
            display: flex
            flex-direction: row
            flex-wrap: nowrap
            .search-input
                hide()
            .search-field
                width: 100%
                text-align: right
                font-size: 1.5rem
                line-height: 30px
                padding: 0 5px
        .menu
            span
                margin: 10px 15px 
                height: 30px
                text-align: center
                cursor: pointer

/***************

    Single Post

***************/

.posts
    display: flex
    margin-bottom: 50px 
    aside
        position: relative
        .btns
            display: flex
            position: absolute
            flex-direction: column
            top: 50%
            right: calc("50% - 25px")
            width: 50px
            text-align: center
            &.social-btns
                display: none !important
            .title
                font-weight: bold
                margin: 15px auto
            span
                margin: 10px auto
                cursor: pointer
    &:hover
        aside
            .btns
                &.social-btns
                    display: flex !important

.comment-form
    header
        margin-top: 60px
        background: rgba(204, 204, 204, 0.28)
.post, 
.comments, 
.comment-form, 
.profile
    header
        display: flex
        flex-direction: row
        flex-wrap: nowrap
        padding: 20px 15px
        .info
            margin: auto 15px
            span
                &.name
                    display: block
                    font-size: 1.2rem
                    line-height: 20px
                    color: $font   
                &.date
                    display: block
                    font-size: 0.9rem
                    color: $font2
    .title
        font-size: 2rem
        padding: 0 15px 0 15px
        margin: 20px 0 10px 0
        color: $font
        font-weight: bold
        
.comments,
.settings
    margin-bottom: 40px
    .comment
        margin-bottom: 40px
    .title
        margin-bottom: 40px
    .content 
        font-size: 1.4rem
        margin: 15px 0
        padding: 0 15px

.comment-form
    .comment-edit
        font-size: 1.4rem
        min-height: 100px
        width: 100%
        outline: none 
        padding: 15px
        margin-bottom: 15px
        border: solid #EAEAEA 2px

.comment-btn 
    text-align: center
    line-height: 50px
    font-size: 1.8rem
    background: #000000
    color: #ffffff

.post
    .content
        text-align: center
        cursor: pointer
        // max-height: 70vh
        overflow: hidden
        a
            display: block
            width: 100%
        img
            max-width: 100%
            margin: auto
    footer
        width: 100%
        margin: 15px
        overflow: auto
        display: flex
        .action
            font-weight: bold
            font-size: 1rem
            color: $font
            display: flex
            line-height: 15px
            margin-right: 30px
            cursor: pointer
            .ico
                margin-right: 15px

/*******
    
    Profile

********/

.profile
    margin-bottom: 60px
    header
        .avatar
            width: 120px
            height: 120px
        .info
            height: 90px
            margin: 0
            margin-left: 60px
            margin-top: 15px
            margin-bottom: 15px
            position relative
            .name,.desc,.social
                display: block
            .name
                font-size: 2.2rem !important
                font-weight: bold
            .desc
                font-size: 1.3rem
                margin-top: 15px
                color: #737373
            .social
                position: absolute
                bottom: 0
                font-size: 0
                .ico
                    margin-right: 15px



.nb-dechet
    font-weight: bold


/* 

    Setting

 */

.flex
    display: flex
    &.flex-row
        flex-direction: row
    &.col
        flex-direction: column
    &.nowrap
        flex-wrap: nowrap

.settings
    .title
        font-size: 2.2rem
        font-weight: bold
    .section-title
        font-size: 1.4rem
        color: #A1A1A1
    .setting
        margin-top: 30px
        .photo
            .old
                max-width: 70px
                width: 100%
                border-radius: 50%
                overflow: hidden
                margin-right: 30px
                img
                    width: 100%
            .btn
                margin: auto 10px
                &:hover
                    text-decoration: underline
                    cursor: pointer
    input, 
    textarea
        font-size: 1.3rem
    textarea
        &#bio
            min-height: 150px
    label
        font-size: 1.6rem
        font-weight: bold
        margin: 30px 0 10px 0
        display: block

a
    &:hover
        text-decoration: none
    &.social
        padding: 15px
        font-size: 1.2rem
        text-align: center
        display: block
        max-width: 200px
        margin: 15px 0
    &.facebook
        color: white
        background: #3B5997
    &.twitter
        color: white
        background: #55ABED

/*

    Awards

*/

.award
    text-align: center
    cursor: pointer
    border: 1px solid transparent
    i
        &::before
            font-size: 7rem
            margin: auto
    &:hover
        box-sizing: border-box
        border: 1px solid #EAEAEA
    &.missing
        i
            font-size: 7rem
            margin: auto
            svg
                width: 50px
                fill: #CCC
        h3
            color: #CCC